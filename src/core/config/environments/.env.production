NODE_ENV=production
PORT=3000

# Variables que DEBEN ser configuradas en el servidor
DB_HOST=your-production-db-host
DB_PORT=3306
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=your-production-db-name

# JWT con clave fuerte en producci贸n
JWT_SECRET=your-super-strong-production-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# CORS restrictivo en producci贸n
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate limiting estricto en producci贸n
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50

# Logging optimizado para producci贸n
LOG_LEVEL=warn
LOG_FORMAT=combined
LOG_DIRECTORY=/var/log/api-main

# ===== FILES =====
FILE_BASE_URL=http://localhost:3000

