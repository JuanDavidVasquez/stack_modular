
NODE_ENV=local
PORT=3000
AUTH_TABLE_NAME=User

# Base de datos local (Docker)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=api_user
DB_PASSWORD=api_password
DB_NAME=api_main_db

TYPEORM_SYNC=false

# JWT para desarrollo
JWT_SECRET=local-development-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS permisivo para desarrollo
CORS_ORIGIN=http://localhost:3000,http://localhost:4200,http://localhost:8080
CORS_CREDENTIALS=true

# Rate limiting relajado para desarrollo
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Logging detallado para desarrollo
LOG_LEVEL=debug
LOG_FORMAT=dev

# ===== FILES =====
FILE_BASE_URL=http://localhost:3000

